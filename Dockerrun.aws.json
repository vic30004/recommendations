{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "vic30004/multi-client",
            "hostname": "client",
            "essential": false,
            "memory":518,
            "command": [
                "tail",
                "-f",
                "/bin/bash"
              ]
        },
        {
            "name": "server",
            "image": "vic30004/multi-api",
            "hostname": "api",
            "essential": false,
            "memory":518,
            "command": [
                "tail",
                "-f",
                "/bin/bash"
              ]

        },
        {
            "name": "nginx",
            "image": "vic30004/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory":518,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "client",
                "server"
            ]
        }
    ]
}